@model List<Shopping.DomainModel.DTO.Supplier.SupplierListItem>;
<a asp-action="AddNew" asp-controller="SupplierManagement">Add New</a>
<table>
    <tr>
        <td>Supplier Name</td>
        <td></td>
    </tr>
</table>

@if (Model == null || Model.Count == 0)
{
    <h4 class="text-danger text-center" >
        No Supplier 
    </h4>
}
else
{
    <table class="table table-bordered table-hover table-striped" >
        <tr>
            <td>SupplierID</td>
            <td>SupplierName</td>
            <td>Grade</td>
            <td>Tel</td>
            <td>Product Count</td>
        </tr>
        @foreach (var sup in this.Model)
        {
            <tr>
                <td>@sup.SupplierID</td>
                <td>@sup.SupplierName</td>
                <td>@sup.Grade</td>
                <td>@sup.Tel</td>
                <td>@sup.ProductCount</td>
            </tr>
        }
    </table>
}